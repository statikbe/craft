{% apply enkode_emails %}
    <div class="w-full {% if settings.centered is not defined %}md:w-8/12{% endif %}">
        <div class="flex">
            {% if block.authorImage|length %}
                <div class="mr-12 max-w-[225px] w-full">
                    {{render_image(block.authorImage|first, {
                        sizes: "225px",
                        aspectRatio: '1/1',
                        srcsetSizes: ['225w'],
                        avifQuality: 80,
                        pictureClass: "max-w-[225px] rounded-full overflow-hidden"
                    })}}
                </div>
            {% endif %}
            <div>
                <blockquote>
                    {% if block.text|length %}
                        {{ block.text }}
                    {% endif %}
                    {% if block.writer|length %}
                        <footer class="mt-4">{{ block.writer }}</footer>
                    {% endif %}
                </blockquote>
                {% if block.cta|length %}
                    <div class="mt-6">
                        {{ render_hyper_links(block.cta) | raw }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endapply %}
