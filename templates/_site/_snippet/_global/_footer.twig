<footer class="page-footer">
	<div class="py-8 bg-light doormat print:hidden">
		<div class="container">
			<div class="flex flex-wrap -mx-4">
				<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3">
					<a href="{{ siteUrl }}" class="">
						{{ svg('@webroot/frontend/img/site/logo.svg')|attr({ class: 'w-full max-w-logo', role: 'img', 'aria-label': 'logo' }) }}
					</a>
					<h3 class="text-3xl">{{ systemName }}</h3>

					{% if generalInfo.address|length %}
						<div class="mt-6">
							{{ generalInfo.address|nl2br }}
						</div>
					{% endif %}
					{% if generalInfo.mail|length or generalInfo.phone|length %}
						<div class="mt-6 space-y-2">
							{% if generalInfo.mail|length %}
								<div class="">
									{{ svg('@webroot/frontend/icons/envelope.svg')|attr({class: 'icon '}) }}
									<a class="no-underline hover:underline" href="mailto:{{generalInfo.mail}}">{{generalInfo.mail}}</a>
								</div>
							{% endif %}
							{% if generalInfo.phone|length %}
								<div class="">
									{{ svg('@webroot/frontend/icons/phone.svg')|attr({class: 'icon '}) }}
									<a class="no-underline hover:underline" href="tel:{{generalInfo.phone}}">{{generalInfo.phone}}</a>
								</div>
							{% endif %}
						</div>
					{% endif %}
				</div>
				<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3">
					{% if not systemOffline %}
						{% include '_site/_snippet/_nav/_doormat' %}
					{% endif %}
				</div>
				<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3"></div>
			</div>
		</div>
	</div>
	<div class="py-6 footer">
		<div class="container">
			<div class="flex flex-wrap justify-between">
				<div class="">
					<span>&copy;
						{{ now|date('Y') }}
						{{ systemName }}
						- Built with
						<span class="sr-only">
							love
						</span>
						{{ svg('@webroot/frontend/icons/heart.svg')|attr({class: 'icon text-primary'}) }}
						by
						<a target="_blank" rel="noopener" href="https://www.statik.be" class="hover:underline hover:text-primary">Statik</a>
					</span>
				</div>
				<div class="pt-4 xs:pt-0 print:hidden">
					<nav class="">
						<ul class="flex-wrap space-y-1 xs:space-y-0 xs:space-x-4 xs:flex">
							{% set cookiePage = craft.entries.section('cookiePolicy').one() %}
							{% if cookiePage %}
								<li>
									<a href="#" class="underline js-cookie-settings hover:no-underline" role="button">{{ 'Cookie-instellingen'|t }}</a>
								</li>
								<li class="">
									<a href="{{ cookiePage.url }}" class="underline hover:no-underline">{{ cookiePage.title }}</a>
								</li>
							{% endif %}
							{% set privacyPage = craft.entries.section('privacyPolicy').one() %}
							{% if privacyPage %}
								<li class="">
									<a href="{{ privacyPage.url }}" class="underline hover:no-underline">{{ privacyPage.title }}</a>
								</li>
							{% endif %}
							{% if socialMedia.facebook or socialMedia.instagram or socialMedia.linkedin or socialMedia.twitter or socialMedia.youtube %}
								<li class="">{{ 'Volg ons'|t }}</li>
							{% endif %}
						</ul>
					</nav>
					{% if socialMedia.facebook or  socialMedia.instagram or socialMedia.linkedin or socialMedia.twitter or socialMedia.youtube %}
						<div class="">
							<ul class="">
								{% include '_site/_snippet/_content/_socialMedia' %}
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</footer>
