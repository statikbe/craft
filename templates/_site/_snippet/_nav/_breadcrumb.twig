{% set segmentUri = '/' %}

<div data-breadcrumb-wrapper>
	<ul class="breadcrumb" data-breadcrumb>
		<li>
			<a class="" href="{{siteUrl}}">Home</a>
		</li>
		{% if breadcrumbs is defined %}
			{% for crumb in breadcrumbs %}
				<li>
					<a href="{{ crumb.url }}">{{ crumb.title }}</a>

				</li>
			{% endfor %}
		{% else %}
			{% for segment in craft.app.request.segments %}
				<pre>
						{{ dump(segment) }}
					</pre>
				{% set segmentUri = segmentUri ~ segment ~ "/"  %}
				<li>
					<a href="{{segmentUri}}">{{ segment|replace('-',' ') }}</a>
				</li>
			{% endfor %}
		{% endif %}
	</ul>
</div>
