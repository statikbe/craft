{% extends "_site/_layout.twig" %}

{% set breadcrumbs = [entry] %}

{% block content %}

    {% include "_site/_snippet/_content/_defaultHeader" %}
    
    <div class="section section--default">
        <div class="container">
            <form method="post" class="max-w-md px-8 pt-6 pb-8 mb-4 bg-gray-300 rounded form" accept-charset="UTF-8">
                {{ csrfInput() }}
                {{ actionInput('users/send-password-reset-email') }}
                {% set requestConfirmation = craft.entries.section('forgotPasswordConfirmation').one() %}
                {{ redirectInput(requestConfirmation.getUrl()) }}
                <div class="form__item">
                    <label class="block mb-2 text-sm font-bold text-gray-700" for="loginName">{{ 'E-mailadres'|t }}</label>
                    <input class="form__input" id="loginName" type="email" name="loginName" required>
                </div>

                {% if errors is defined %}
                    {% for error in errors %}
                        <div class="relative px-4 py-3 mb-3 text-red-700 bg-red-100 border border-red-400 rounded" role="alert">{{ error }}</div>
                    {% endfor %}
                {% endif %}


                <div class="form__actions">
                    <button type="submit" class="px-4 py-2 font-bold text-white bg-black rounded form__btn btn btn--arrow hover:bg-blue-700 focus:outline-none focus:ring">{{ 'Nieuw wachtwoord aanvragen'|t }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}