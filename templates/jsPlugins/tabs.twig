      <li class="w-full sm:w-1/2 lg:w-auto lg:m-0">
        <button type="button" class="w-full px-5 py-3 text-base font-normal text-primary bg-white-50 aria-selected:bg-primary aria-selected:text-white" data-panel="Tab3">
