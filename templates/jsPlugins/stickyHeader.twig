{% set baseUrl = craft.app.config.general.aliases.baseUrl %}
{% set currentLocale = craft.app.language|split('-') %}

{% set breadcrumbs = [
    {
		url: './overview.twig',
		title: 'Plugins'
	},
    {
		url: './stickyHeader.twig',
		title: 'Sticky Header'
	},
] %}
<!DOCTYPE html>
	<html
	class="no-js js-done" lang="{{ currentLocale[0] }}">
	<head>
		<link rel="stylesheet" type="text/css" href="/css/inert.css" id="inert-style"/>
		{{ craft.vite.script("frontend/js/site.ts", false) }}
		{{ craft.vite.inline("@webroot/favicon/site/webapp.html") }}
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{% hook 'seo-fields' %}

		{% block head_scripts %}
			<link rel="preconnect" href="//www.googletagmanager.com">
		{% endblock %}
	</head>

	<body
		class="page-{{ craft.app.request.getSegment(1) ?: 'home' }} {% block bodyClasses %}{% endblock %}">

        {% if systemOffline is not defined %}
			{% set systemOffline = false %}
		{% endif %}

        {% set generalInfo = craft.entries.section('contact').status(null).one() %}
		{% set fallback = craft.entries.section('siteSettings').status(null).one() %}
        
		<div class="page-wrap" id="mainContentBlock">
			<div class="sr-only skip-to-main">
				<a href="#main">{{ 'Ga verder naar de inhoud'|t }}</a>
			</div>

            <style>
                @keyframes headerAni {
                    to{
                        height: 60px;
                    }
                }
                header{
                    height: 100px;
                    animation: headerAni linear both;
                    animation-timeline: scroll(block root);
                    animation-range: 0px 100px;
                }
            </style>

			<header class="bg-red-500 z-10 sticky top-0 parallax py-3 flex justify-between">
                <a href="{{ siteUrl }}" class="w-20 bg-blue-500 flex items-center justify-center">
                    Site logo
                </a>
                <ul class="flex flex-wrap space-x-6 items-center">
                    <li class=""><a href="#">item 1</a></li>
                    <li class=""><a href="#">item 2</a></li>
                    <li class=""><a href="#">item 3</a></li>
                    <li class=""><a href="#">item 4</a></li>
                    <li class=""><a href="#">item 5</a></li>
                </ul>
            </header>

			<main
				class="page-main" id="main">
				{% block breadcrumbs %}
					<div class="py-5 section section--default">
						<div class="container">
							{% include '_site/_snippet/_nav/_breadcrumb' %}
						</div>
					</div>
				{% endblock %}
				
                
                <div class="section section--default">
                    <div class="container">
                        <div class="w8/12">
                            <h1>How to use?</h1>
                            <p>
                                <ul class="list-arrow">
                                    <li>
                                        Add the attribute "data-s-sticky-header" to your header.
                                    </li>
                                    <li>
                                        Activate sticky-header.css by adding it to the main.css. And tailor it to you needs.
                                    </li>
                                    <li>
                                        Activate the sticky-header.component.ts
                                    </li>
                                </ul>
                            </p>
                            <p>
                                This will result in a fixed header width the correct top offset to the body.
                            </p>
                            <h2>How to make the header disepear, except when you scroll up?</h2>
                            <p>
                                Easy! Just add an extra attribute of data-only-show-on-scroll-up="true" to your header. That's it.
