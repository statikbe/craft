                    data-question="{{ 'Are you sure you want to navigate to the Statik website?'|t }}"
                    data-ok="Hell Yeah"
                    data-cancel="No">
                    Go to the Statik website
                </a>
            </div>
            <div class="mt-4">
                <button type="button" id="modalConfirmationButton" class="btn">This is triggered by JS</button>
            </div>
        </div>
    </div>
    <div class="section section--default">
        <div class="container">
            <h2>Open a modal with JS</h2>
            <p>The default options for the modal are:</p>
            <pre><code class="language-javascript">options = {
	closeHTML: `{{ icon('clear') }} `,
    nextHTML: `{{ icon('chevron-right', { class: 'text-primary' }) }} `,
    prevHTML: `{{ icon('chevron-left', { class: 'text-primary' }) }} `,
	imageMargin: 20,
	imageMarginNav: 80,
	imageMarginNoneBreakPoint: 820,
	resizeDuration: 100,
	fadeDuration: 100,
	initTriggers: true, //Enables the auto triggering of modal links (.js-modal-*)
	allowClose: true, //Show the close button
	onClose: null, //Callback function when the close action is triggered
}</code></pre>
            <h3 class="mt-8">Simple example</h3>
            <pre><code class="language-javascript">import { ConfirmationModalPlugin } from '../plugins/modal/confirmation.plugin';
import { ImageModalPlugin } from '../plugins/modal/image.plugin';
import { VideoModalPlugin } from '../plugins/modal/video.plugin';
import { ModalComponent } from './modal.component';
export class SiteComponent {
  constructor() {
    const modalConfirmationButton = document.getElementById('modalConfirmationButton');
    modalConfirmationButton.addEventListener('click', () => {
      const modal = new ModalComponent({
        initTriggers: false, //important otherwise all triggers for other modals wil receive another eventlistener
        allowClose: true, 
        plugins: [ImageModalPlugin, VideoModalPlugin, ConfirmationModalPlugin],
      });

      modal.openPluginModal('image', { src: 'https://source.unsplash.com/-nfNBf407jo', caption: 'This is my caption' });

      modal.openPluginModal('video', { src: 'https://www.youtube.com/watch?v=mN0zPOpADL4' });

      modal.openPluginModal('confirmation', {
        question: 'This is my question',
        cancel: 'My cancel text',
        ok: 'My OK text',
        callback: () => {
          console.log('This is my JS callback');
        },
      });
    });
  }
}</code>
			</pre>
        </div>
    </div>
